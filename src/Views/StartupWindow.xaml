<Window x:Class="AITeacherAssistant.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AITeacherAssistant.Views"
        mc:Ignorable="d"
        Title="AI Teacher Assistant - Connect"
        MinHeight="500" MinWidth="500"
        Height="900" Width="650"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        Background="#F5F7FA"
        SizeToContent="WidthAndHeight">
    
    <Window.Resources>
        <!-- Animation Storyboards -->
        <Storyboard x:Key="ConnectionAnimation" RepeatBehavior="1x">
            <!-- Fade out QR Code -->
            <DoubleAnimation Storyboard.TargetName="QRCodeImage"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0"
                           Duration="0:0:0.4"/>
            
            <!-- Fade in Checkmark -->
            <DoubleAnimation Storyboard.TargetName="CheckmarkImage"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           BeginTime="0:0:0.2"
                           Duration="0:0:0.4"/>
            
            <!-- Fade out Session Code -->
            <DoubleAnimation Storyboard.TargetName="SessionCodeText"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0"
                           BeginTime="0:0:0.4"
                           Duration="0:0:0.3"/>
            
            <!-- Fade in Connected Text -->
            <DoubleAnimation Storyboard.TargetName="ConnectedText"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           BeginTime="0:0:0.6"
                           Duration="0:0:0.4"/>
        </Storyboard>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5a67d8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4c51bf"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#48bb78"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38a169"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2f855a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <!-- Background Gradient -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <!-- Main Content Container -->
        <Border Background="White" 
                CornerRadius="20" 
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Opacity="0.1" 
                                BlurRadius="20" 
                                ShadowDepth="0"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Disabled"
                        Padding="20">
                <Viewbox Stretch="Uniform" MaxWidth="800" MaxHeight="600">
                    <StackPanel MinWidth="500">
                    
                    <!-- Header Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- App Icon/Logo -->
                        <Ellipse Width="80" Height="80" 
                               Fill="#667eea" 
                               Margin="0,0,0,10">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#667eea" 
                                                Opacity="0.3" 
                                                BlurRadius="10" 
                                                ShadowDepth="0"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- App Title -->
                        <TextBlock Text="AI Teacher Assistant" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#2d3748" 
                                 HorizontalAlignment="Center"/>
                        
                        <!-- Subtitle -->
                        <TextBlock Text="Connect from your phone to begin" 
                                 FontSize="16" 
                                 Foreground="#718096" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- QR Code Section -->
                    <Border Background="#F7FAFC" 
                            CornerRadius="16" 
                            Padding="25" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- QR Code Image Container -->
                            <Border Background="White" 
                                    CornerRadius="12" 
                                    Padding="20">
                                <Grid>
                                    <!-- QR Code Image -->
                                    <Image x:Name="QRCodeImage" 
                                         Width="300" 
                                         Height="300" 
                                         Stretch="Uniform"
                                         Opacity="1"/>
                                    
                                    <!-- Checkmark Container (initially hidden) -->
                                    <Grid x:Name="CheckmarkImage" 
                                          Width="300" 
                                          Height="300" 
                                          Opacity="0">
                                        <Border Background="#48bb78" 
                                                CornerRadius="12" 
                                                Width="300" 
                                                Height="300"/>
                                        <TextBlock Text="✓" 
                                                   FontSize="120" 
                                                   FontWeight="Bold" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- Manual Code Entry -->
                            <StackPanel HorizontalAlignment="Center" Margin="0,15,0,0">
                                <TextBlock Text="Or enter code:" 
                                         FontSize="14" 
                                         Foreground="#4a5568" 
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,8"/>
                                
                                <!-- Code Display Container -->
                                <Grid>
                                    <!-- Original Code Display -->
                                    <Border x:Name="CodeBorder"
                                            Background="White" 
                                            CornerRadius="8" 
                                            Padding="20,15" 
                                            BorderBrush="#e2e8f0" 
                                            BorderThickness="2">
                                        <TextBlock x:Name="SessionCodeText" 
                                                 Text="A B C D E" 
                                                 FontFamily="Consolas" 
                                                 FontSize="36" 
                                                 FontWeight="Bold" 
                                                 Foreground="#2d3748" 
                                                 HorizontalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Connected Text (initially hidden) -->
                                    <TextBlock x:Name="ConnectedText"
                                             Text="CONNECTED"
                                             FontSize="32"
                                             FontWeight="Bold"
                                             Foreground="#48bb78"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Opacity="0"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Connection Status Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- Status Text -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,15">
                            <Ellipse x:Name="StatusDot" 
                                   Width="12" 
                                   Height="12" 
                                   Fill="#f6ad55" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" 
                                     Text="Waiting for connection..." 
                                     FontSize="16" 
                                     Foreground="#4a5568" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        
                        <!-- Back to Menu Button -->
                        <Button x:Name="BackToMenuButton" 
                              Content="⬅️ Back to Menu" 
                              Style="{StaticResource ModernButton}" 
                              Click="BackToMenuButton_Click"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"
                              Visibility="Visible"/>
                        
                    </StackPanel>
                    
                    <!-- Footer Info -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📱 Open your phone's camera or QR scanner" 
                                 FontSize="12" 
                                 Foreground="#a0aec0" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Scan the QR code or enter the 5-letter code above" 
                                 FontSize="12" 
                                 Foreground="#a0aec0" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    </StackPanel>
                </Viewbox>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
