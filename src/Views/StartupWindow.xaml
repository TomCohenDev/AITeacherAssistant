<Window x:Class="AITeacherAssistant.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AITeacherAssistant.Views"
        mc:Ignorable="d"
        Title="AI Teacher Assistant - Connect"
        Height="900" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        Background="#F5F7FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5a67d8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4c51bf"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#48bb78"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38a169"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2f855a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Test Button Style -->
        <Style x:Key="TestButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#ed8936"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#dd6b20"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#c05621"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Background Gradient -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <!-- Main Content Container -->
        <Border Background="White" 
                CornerRadius="20" 
                Margin="25">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Opacity="0.1" 
                                BlurRadius="20" 
                                ShadowDepth="0"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                        HorizontalScrollBarVisibility="Disabled"
                        Margin="25">
                <StackPanel>
                    
                    <!-- Header Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- App Icon/Logo -->
                        <Ellipse Width="80" Height="80" 
                               Fill="#667eea" 
                               Margin="0,0,0,10">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#667eea" 
                                                Opacity="0.3" 
                                                BlurRadius="10" 
                                                ShadowDepth="0"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- App Title -->
                        <TextBlock Text="AI Teacher Assistant" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#2d3748" 
                                 HorizontalAlignment="Center"/>
                        
                        <!-- Subtitle -->
                        <TextBlock Text="Connect from your phone to begin" 
                                 FontSize="16" 
                                 Foreground="#718096" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- QR Code Section -->
                    <Border Background="#F7FAFC" 
                            CornerRadius="16" 
                            Padding="25" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- QR Code Image -->
                            <Border Background="White" 
                                    CornerRadius="12" 
                                    Padding="20">
                                <Image x:Name="QRCodeImage" 
                                     Width="300" 
                                     Height="300" 
                                     Stretch="Uniform"/>
                            </Border>
                            
                            <!-- Manual Code Entry -->
                            <StackPanel HorizontalAlignment="Center" Margin="0,15,0,0">
                                <TextBlock Text="Or enter code:" 
                                         FontSize="14" 
                                         Foreground="#4a5568" 
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,8"/>
                                
                                <!-- Code Display -->
                                <Border Background="White" 
                                        CornerRadius="8" 
                                        Padding="20,15" 
                                        BorderBrush="#e2e8f0" 
                                        BorderThickness="2">
                                    <TextBlock x:Name="SessionCodeText" 
                                             Text="A B C D E" 
                                             FontFamily="Consolas" 
                                             FontSize="28" 
                                             FontWeight="Bold" 
                                             Foreground="#2d3748" 
                                             HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Connection Status Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- Status Text -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,15">
                            <Ellipse x:Name="StatusDot" 
                                   Width="12" 
                                   Height="12" 
                                   Fill="#f6ad55" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" 
                                     Text="Waiting for connection..." 
                                     FontSize="16" 
                                     Foreground="#4a5568" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Test Connection Button (for development) -->
                        <Button x:Name="TestConnectionButton" 
                              Content="Simulate Connection (Test)" 
                              Style="{StaticResource TestButton}" 
                              Click="TestConnectionButton_Click"
                              HorizontalAlignment="Center"/>
                        
                        <!-- Begin Session Button (shown after connection) -->
                        <Button x:Name="BeginSessionButton" 
                              Content="🚀 Begin Session" 
                              Style="{StaticResource SuccessButton}" 
                              Click="BeginSessionButton_Click"
                              HorizontalAlignment="Center"
                              Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <!-- Footer Info -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📱 Open your phone's camera or QR scanner" 
                                 FontSize="12" 
                                 Foreground="#a0aec0" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Scan the QR code or enter the 5-letter code above" 
                                 FontSize="12" 
                                 Foreground="#a0aec0" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
